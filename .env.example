# ========================================
# DevStack Configuration (.env.example)
# ========================================
# Copy this file to .env and customize values
# IMPORTANT: .env is not tracked by git (see .gitignore)
# Keep sensitive data like passwords in .env, not in version control

# ========================================
# PostgreSQL Configuration
# ========================================
# Image tag - change to different PostgreSQL version if needed
# Available versions: 12-alpine, 13-alpine, 14-alpine, 15-alpine, 16-alpine
POSTGRES_IMAGE_TAG=15-alpine

# Database configuration
POSTGRES_DB=devstack
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Port mapping (host:container)
POSTGRES_PORT=5432

# ========================================
# MySQL Configuration
# ========================================
# Image tag - change to different MySQL version if needed
# Available versions: 5.7, 8.0, 8.1
MYSQL_IMAGE_TAG=8.0

# Database configuration
MYSQL_DATABASE=devstack
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=devstack
MYSQL_PASSWORD=devstack

# Port mapping (host:container)
MYSQL_PORT=3306

# ========================================
# MongoDB Configuration
# ========================================
# Image tag - change to different MongoDB version if needed
# Available versions: 4.4, 5.0, 6.0, 7.0
MONGODB_IMAGE_TAG=7.0

# Database configuration
MONGO_INITDB_DATABASE=devstack
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=root

# Port mapping (host:container)
MONGODB_PORT=27017

# ========================================
# Redis Configuration
# ========================================
# Image tag - change to different Redis version if needed
# Available versions: 6-alpine, 7-alpine, 8-alpine
REDIS_IMAGE_TAG=7-alpine

# Port mapping (host:container)
REDIS_PORT=6379

# ========================================
# MinIO Configuration
# ========================================
# Image tag - change to different MinIO version if needed
# Use 'latest' for newest or specify version like 'RELEASE.2024-01-01T00-00-00Z'
MINIO_IMAGE_TAG=latest

# MinIO credentials (S3 API)
MINIO_ROOT_USER=devstack
MINIO_ROOT_PASSWORD=devstackpassword

# Port mappings
MINIO_PORT=9000              # S3 API port
MINIO_CONSOLE_PORT=9001      # Console/UI port

# ========================================
# Jupyter Lab Configuration
# ========================================
# Image tag - change to different Jupyter version if needed
# Available: base-notebook, minimal-notebook, datascience-notebook, scipy-notebook
JUPYTER_IMAGE_TAG=latest

# Jupyter access token (password bypass)
JUPYTER_TOKEN=devstack

# Port mapping (host:container)
JUPYTER_PORT=8888

# ========================================
# Common Configuration
# ========================================
# DevStack project name (used for volume/network naming)
PROJECT_NAME=devstack

# Health check settings (in seconds)
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=5

# ========================================
# Development Settings
# ========================================
# Set to true for verbose Docker output, false for quiet mode
DOCKER_VERBOSE=false

# Timezone for services (e.g., UTC, Asia/Kolkata, America/New_York)
TIMEZONE=UTC

# ========================================
# Notes for Production/Staging
# ========================================
# DO NOT commit .env to version control
# DO NOT use default credentials in production
# Always use strong, unique passwords for databases
# Consider using secrets management tools (e.g., 1Password, Vault) for sensitive data
# Store .env files securely with appropriate file permissions (chmod 600)
